{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@interfaces/*": [
				"/interfaces/*"
			],
			"@utils/*": [
				"/utils/*"
			],
		},
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ES2015",
		"module": "CommonJS",
		"declaration": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}