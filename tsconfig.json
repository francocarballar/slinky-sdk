{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@interfaces/*": [
				"src/interfaces/*"
			],
			"@utils/*": [
				"src/utils/*"
			],
		},
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ES2015",
		"module": "CommonJS",
		"declaration": true,
		"strict": true,
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			}
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}